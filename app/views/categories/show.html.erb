<article>
  <header>
    <h2>
      <%= @category.name %>
      [ <%= link_to 'Edit', edit_category_path(@category) %> ]
    </h2>
  </header>
  
  <h3>Name:</h3>
  <p><%= @category.name %></p>
  
  <h3>Recipes in this Category:</h3>
  <ul>
    <% @recipes = @category.recipes %>
    <% @recipes.each do |recipe|%>
    <li><%= recipe.title %></li>
    <% end %>
  </ul>
  
</article>

<p><%= link_to 'Back', categories_path %></p>